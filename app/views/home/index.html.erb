<body class="background_blur">
    <%= render 'layouts/header' %>
        <h1 class="center">GA Students Recommendations</h1>

    <div class="row">
        <!-- SCSS styling not working had to use inline. -->
        <div style =  "padding-bottom: 40px;" class="col s6 ">
            <input id="pac-input" class="controls" type="text" placeholder="Enter a location">
            <div class="map-responsive" id="map"></div>
        </div>
        <p id="notice"><%= notice %></p>

        <br>
        <div class="col s6">
            <div class="card-panel">
                <table>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th colspan="3"></th>
                            <th>Address</th>
                            <th colspan="3"></th>
                        </tr>
                    </thead>

                    <tbody>
                        <% @places.each do |place| %>
                        <tr>
                            <td><%= place.name %></td>
                            <th colspan="3"></th>
                            <td><%= place.address %></td>
                            <th colspan="3"></th>
                            <td><%= link_to 'Details', place %></td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>

        <%= render 'layouts/footer' %>
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBAchzUgA7nscKvpxt3v_YoC1pn5_55GcM&libraries=places&callback=initMap" async defer></script>

    </body>
